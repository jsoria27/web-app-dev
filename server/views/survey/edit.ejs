<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Content for the add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>
            <form method="POST" class="form">
                <div class="form-group">
                    <label for="nameTextField"> Survey Title </label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Survey Title"
                    name="name" 
                    value="<%= survey.name %>" 
                    required>
                </div>
                <div class="form-group">
                    <label for="q1TextField"> Question 1 </label>
                    <input type="text" class="form-control"
                    id="q1TextField"
                    placeholder="Enter Question 1"
                    name="question1" 
                    value="<%= survey.question1 %>" 
                    required>
                </div>
                <div class="form-group">
                    <label for="a1TextField"> Answer 1 </label>
                    <input type="text" class="form-control"
                    id="a1TextField"
                    placeholder="Enter Answer 1"
                    name="answer1"
                    value="<%= survey.answer1 %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="q2TextField"> Question 2 </label>
                    <input type="text" class="form-control"
                    id="q2TextField"
                    placeholder="Enter Question 2"
                    name="question2" 
                    value="<%= survey.question2 %>" 
                    required>
                </div>
                <div class="form-group">
                    <label for="a2TextField"> Answer 2 </label>
                    <input type="text" class="form-control"
                    id="a2TextField"
                    placeholder="Enter Answer 2"
                    name="answer2" 
                    value="<%= survey.answer2 %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="q3TextField"> Question 3 </label>
                    <input type="text" class="form-control"
                    id="q3TextField"
                    placeholder="Enter Question 3"
                    name="question3" 
                    value="<%= survey.question3 %>" 
                    required>
                </div>
                <div class="form-group">
                    <label for="a3TextField"> Answer 3 </label>
                    <input type="text" class="form-control"
                    id="a3TextField"
                    placeholder="Enter Answer 3"
                    name="answer3" 
                    value="<%= survey.answer3 %>" 
                    required>
                </div>
    
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>
                    Submit 
                </button>
    
                <a href="/survey" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel </a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>

